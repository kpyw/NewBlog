<h1>New Post</h1>
<%= form_tag posts_url, :method => 'post' do %>

<%= label_tag 'title' %>
<%= text_field_tag 'title' %>
<br>
<%= label_tag 'article' %>
<%= text_field_tag 'article' %>
<br>
<%= label_tag 'category' %>
<%= text_field_tag 'category' %>
<br>
<%= submit_tag 'Submit new post' %>
<%end%>
